<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ScrollPane?>

<Pane xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ppai.controller.Monitor"
      prefWidth="600.0" prefHeight="600.0">

    <VBox prefWidth="600.0" prefHeight="600.0">
        <children>
            <!-- Encabezado -->
            <Pane prefHeight="82.0" prefWidth="600.0" style="-fx-background-color: green;">
                <children>
                    <Label layoutX="184.0" layoutY="9.0" text="Red Sismica">
                        <font>
                            <Font size="44.0" />
                        </font>
                    </Label>
                </children>
            </Pane>

            <!-- Subtítulo -->
            <Pane prefHeight="38.0" prefWidth="600.0" style="-fx-background-color: #16d400;">
                <children>
                    <Label layoutX="14.0" layoutY="2.0" text="Cerrar Ordenes de Inspeccion">
                        <font>
                            <Font size="24.0" />
                        </font>
                    </Label>
                </children>
            </Pane>

            <!-- Contenedor scroll para órdenes -->
            <ScrollPane fitToWidth="true" prefHeight="350.0" prefWidth="600.0">
                <content>
                    <VBox fx:id="contenedorOrdenes" spacing="10.0" padding="10.0" />
                </content>
            </ScrollPane>

            <!-- Comentario -->
            <Label text="Comentario:">
                <font>
                    <Font size="20.0" />
                </font>
            </Label>
            <TextField promptText="Ingrese comentario..." prefHeight="35.0" prefWidth="574.0" />

            <!-- Botón -->
            <Button text="Continuar" prefWidth="200.0">
                <font>
                    <Font size="20.0" />
                </font>
            </Button>
        </children>
    </VBox>
</Pane>

